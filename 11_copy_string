int main() {
    char source[100], destination[100];
    int i;
    printf("Isha Singh-192210252\n");
    printf("Enter a string: ");
    gets(source);

    for (i = 0; source[i] != '\0'; i++) {
        destination[i] = source[i];
    }
    destination[i] = '\0';  

    printf("Source string: %s\n", source);
    printf("Copied string: %s\n", destination);

    return 0;
}
